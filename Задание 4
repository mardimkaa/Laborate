//задание 1

#include <stdio.h>
int main()
{
    int a;
    int b;
    printf("Введите два числа\n");
    scanf("%d%d", &a, &b);
    
    int s;
    int p;
    
    s = a * b;
    p = 2*a + 2*b;
    
    printf("площадь прямоугольника равна %d\n", s);
    printf("периметр равен %d", p);

    return 0;
}


//задание 2

#include <stdio.h>
int main()
{
    int d;
    printf("Введите число\n");
    scanf("%d", &d);
    
    double pi = 3.14;
    
    double S;
    
    S = d * pi;
    
    printf("Длинна окружности равна %f", S );
    
    return 0;
}

//задание 3 

#include <stdio.h>
#include <math.h>

int main()
{
 
    int a, b; 
    double srzn;
 
    printf("Введите первую переменную\n");
    scanf("%d", &a);
    printf("Введите вторую переменную\n");
    scanf("%d", &b);
    srzn = (a+b)/2.0;
    printf("Среднее арифметическое = %f\n", srzn);
    
    return 0;
}

//задание 4

#include <stdlib.h>
#include <math.h>

int main()
{
    int a, b;
    printf("Введите два числа\n");
    scanf("%d%d", &a, &b);
    int sum = pow(a, 2) + pow(b, 2);
    int razn = pow(a, 2) + pow(b, 2);
    razn = abs(razn);
    int pr = pow(a, 2) * pow(b, 2);
    int ch = pow(a, 2) / pow(b, 2);
    printf("Сумма квадратов = %d\n", sum);
    printf("Разность квадратов = %d\n", razn);
    printf("Произведение квадратов = %d\n", pr);
    printf("частное квадратов = %d\n", sum);
}

//задание 5

#include <stdlib.h>
#include <math.h>
#include <stdio.h>

int main()
{
    int a, b;
    printf("Введите два числа\n");
    scanf("%d%d", &a, &b);
    int sum = abs(a) + abs(b);
    int razn = abs(a) - abs(b);
    razn = abs(razn);
    int pr = abs(a) * abs(b);
    int ch = abs(a) / abs(b);
    printf("Сумма модулей = %d\n", sum);
    printf("Разность модулей = %d\n", razn);
    printf("Произведение модулей = %d\n", pr);
    printf("частное модулей = %d\n", sum);
}

