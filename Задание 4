//задание 1


int main()
{
    int a;
    int b;
    scanf("%d%d", &a, &b);
    
    int s;
    int p;
    
    s = a * b;
    p = 2*a + 2*b;
    
    printf("площадь равна %d\n", s);
    printf("периметр равен %d", p);

    return 0;
}


//задание 2

int main()
{
    int d;
    scanf("%d", &d);
    
    double pi = 3.14;
    
    double S;
    
    S = d * pi;
    
    printf("Длинна равна %f", S );
    
    return 0;
}

//задание 3 

#include <stdio.h>
#include <math.h>

int main()
{
 
    int a, b; 
    double srzn;
 
    printf("Введите первую переменную\n");
    scanf("%d", &a);
    printf("Введите вторую переменную\n");
    scanf("%d", &b);
    srzn = (a+b)/2.0;
    printf("Среднее арифметическое = %f\n", srzn);
    
    return 0;
}

//задание 4

#include <stdlib.h>

int main()
{
    int a;
    int b;
    scanf("%d%d", &a, &b);
    
    if (a == 0)
        printf("значение а равно нулю");
    else if (b == 0)
        printf("значение b равно нулю");
    else
        printf("сумма = %d\n", a + b);
        printf("разность = %d\n", abs(a - b));
        printf("произведение = %d\n", a * b);
        
        
    
    return 0;
}

//задание 5

#include <stdio.h>
#include <math.h>

int main() 
{
    int a;
    int b;
    printf("Введите числа a и b\n");
    scanf("%d%d", &a, &b);
    int sum = abs(a) + abs(b);
    printf("%d\n", sum);
    int raz = abs(a) - abs(b);
    printf("%d\n", raz);
    int pr = abs(a) * abs(b);
    printf("%d\n", pr);
    double ch = (double)abs(a) / abs(b);
    printf("%f", ch);
    return 0;
    
}
