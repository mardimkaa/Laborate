#include <stdio.h>
#include <math.h>
#include <stdlib.h>
int main()
{
    int N;
    printf("Введите номер задания:");
    scanf("%d", &N);
    if (N == 1) {
        int n;
     
        printf("Введите N: ");
        scanf("%i",&n);
     
        int a[n];
     
        int i;
        printf("Введите массив а\n");
        for (i=0; i<n; ++i){
            printf("a[%i] : ",i);
            scanf("%i",&a[i]);
        }
        int k=0;
        for (i=1; i<n; ++i){
                if (a[k]!=a[i]){
                    ++k;
                    a[k]=a[i];
               }
        }
        ++k;
    printf("Вывод\n");
    for (i=0; i<k; ++i)
    printf("a[%i]: %i\n",i,a[i]);
        
        
    }
       if (N == 2){
            int n;

        printf("N: ");
        scanf("%i",&n);
        int a[n];

        int i;
        for (i=0; i<n; ++i){
            printf("a[%i] : ",i+1);
            scanf("%i",&a[i]);
        }
        int k = 1, temp;
        for(i = 1; i < n; i++){
            int count = 0;
            for(int g = k; g < n; g++){
                if(a[g] == a[i]){
                    count++;
                }
                }
            if(count != 2){
                   temp = a[k];
                   a[k] = a[i];
                   a[i] = temp;
                   k++;
            }
            
        }
        printf("Размер массива a %d \n", k);
            for (i = 0; i<k; i++)
            printf("%d\n", a[i]);
      
    }

    if (N == 3){
    int n;
 
    printf("N: ");
    scanf("%i",&n);
    int a[n];
 
    int i;
    for (i=0; i<n; ++i){
        printf("a[%i] : ",i);
        scanf("%i",&a[i]);
    }
 
    int min,max;
 
    for (max=0, i=1; i<n; i++)
    {
        if (a[i] < a[max]){
          max = a[i]; 
        } 
    }
    printf("%i%i", min, max);
    int c[n+2];
    for (i=0; i<n; ++i){
        for(int g = 0; g < n + 2; g++){
            if(a[i] == min){
                a[g] = 0;
                a[g+1] = a[i];
                g++;
            }
            if(a[i] == max){
                a[g+1] = 0;
                a[g] = a[i];
                g++;
            }
            else{
                a[g] = a[i];
            }
            
        }
    }
    
    
    printf("Вывод\n");
            for (i = 0; i<n; i++)
            printf("%d\n", c[i]);
 
 
    return 0;
    }

    if (N == 4){
        int n;

        printf("N: ");
